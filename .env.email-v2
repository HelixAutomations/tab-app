# Email V2 System Environment Configuration

# Core V2 Settings
# Set to 'true' to enable V2 enhanced email formatting
REACT_APP_EMAIL_V2_ENABLED=false

# Fallback Settings  
# Set to 'false' to disable automatic fallback to V1 on errors (not recommended for production)
REACT_APP_EMAIL_V2_FALLBACK=true

# Logging Settings
# Set to 'true' to enable detailed logging of email processing steps
REACT_APP_EMAIL_V2_LOGGING=false

# Test Mode
# Set to 'true' to run both V1 and V2 systems and log comparison without affecting output
REACT_APP_EMAIL_V2_TEST_MODE=false

# Development Testing Configuration
# Uncomment these settings for development testing:

# REACT_APP_EMAIL_V2_ENABLED=true
# REACT_APP_EMAIL_V2_LOGGING=true
# REACT_APP_EMAIL_V2_TEST_MODE=true

# Production Safety Notes:
# - Keep REACT_APP_EMAIL_V2_ENABLED=false until thoroughly tested
# - Always keep REACT_APP_EMAIL_V2_FALLBACK=true in production
# - Enable logging only for debugging purposes
# - Use test mode to compare V1 vs V2 output without affecting production